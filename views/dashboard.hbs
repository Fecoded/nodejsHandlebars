<h6 class="mt-3">Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your stories</p>
{{#if message}} {{> _alert message=message }} {{/if}}
<a href="/stories/upsert" type="button" class="btn btn-danger btn-sm">Add Story</a>
{{#if stories}}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
            <tr>
                <td><a href="/stories/{{_id}}"></a>{{title}}</td>
                <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                <td><span class="dash-status">{{status}}</span></td>
                <td class="d-flex gap-2">
                    <a href="/stories/{{_id}}" class="btn btn-success">
                        <i class="fas fa-edit"></i>
                    </a> 
                    {{message}}
                    <form action="/stories/delete/{{_id}}" method="post" id="delete-form">
                        <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i>
                        </button>
                    </form>

                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>You have not created any stories</p>
{{/if}} 
