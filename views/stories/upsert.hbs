<h3 class="my-3">{{#if add}} Add {{^}} Edit {{/if}} Story</h3>
<div class="row">
    <form action="{{#if add}} /stories {{^}} /stories/upsert/{{story._id}} {{/if}}" method="post">
        <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="title" id="title" value="{{story.title}}" class="form-control">
        </div>
    
    <div class="">
        <label for="status">Status</label>
        <select name="status" id="status" class="form-select">
            {{#select story.status}}
            <option value="public" selected>Public</option>
            <option value="private">Private</option>
            {{/select}}
        </select>
    </div>

    <div class="my-3">
        <h5>Tell Us Your Story</h5>
        <textarea name="body" id="body" class="form-control">{{story.body}}</textarea>
    </div>

    <div class="">
        <input type="submit" value="Save" class="btn btn-success" />
          <a href="/dashboard" class="btn btn-warning">Cancel</a>
    </div>
    </form>
</div>